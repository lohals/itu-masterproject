    <AendringCentreretParagraf>
      <Explicatus>§ 2</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov nr. 1218 af 14. december 2009 om ændring af lov om Arbejdsgivernes Elevrefusion og lov om erhvervsuddannelser.</Char>
        </Linea>
        <Linea>
          <Char>(Justering af præmie, løntilskud og bonus, adgang til skolepraktik og til skoleundervisning og tilskud til praktikvirksomheder) foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char formaChar="Italic">§ 3, stk. 2,  </Char>
                <Char>ophæves. </Char>
              </Linea>
            </Exitus>
            <Exitus>
              <Table style="SchultzColumns: 13 255;" border="0" cellspacing="0" cellpadding="0" align="left" width="267">
                <Tr>
                  <Td width="13" />
                  <Td width="255">
                    <Exitus>
                      <Linea>
                        <Char>Stk. 3-7 bliver herefter stk. 2-6.</Char>
                      </Linea>
                    </Exitus>
                  </Td>
                </Tr>
              </Table>
            </Exitus>
          </AendringDefinition>
          <AendringAktion />
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char formaChar="Italic">§ 3, stk. 6, nr. 2,</Char>
                <Char> der bliver stk. 5, nr. 2, affattes således:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst>
              <Indentatio formaInd="Nummer">
                <Explicatus>2)</Explicatus>
                <Exitus>
                  <Linea>
                    <Char>Bonus for uddannelsesaftaler, der indgås i perioden fra den 5. november 2009 til den 31. december 2010, jf. denne lovs § 1.</Char>
                  </Linea>
                  <Linea>
                    <Char>Uddannelsesaftaler, som indgås efter den 15. november 2010, skal påbegyndes, senest 3 måneder efter at aftalen er indgået, for at medføre ret til bonus.</Char>
                  </Linea>
                </Exitus>
              </Indentatio>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>3.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 3, stk. 6, nr. 3,</Char>
                <Char> der bliver stk. 5, nr. 3, udgår », jf. stk. 2«. </Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion />
        </Aendring>
      </AendringsNummer>
