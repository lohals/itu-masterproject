        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char formaChar="Italic" signiChar="AendringURN">§ 19, stk. 2</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">3,</Char>
                <Char> ophæves. </Char>
              </Linea>
            </Exitus>
            <Exitus>
              <Table style="SchultzColumns: 13 255;" border="0" cellspacing="0" cellpadding="0" align="left" width="267">
                <Tr>
                  <Td width="13" />
                  <Td width="255">
                    <Exitus>
                      <Linea>
                        <Char>Stk. 4 bliver herefter stk. 2.</Char>
                      </Linea>
