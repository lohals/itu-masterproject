                      <Exitus>
                        <Linea>
                          <Char>Lov om kirkers brug, sognebåndsløsning m.m., jf. lovbekendtgørelse nr. 151 af 30. maj 1961, bortset fra §§ 8-11.</Char>
                        </Linea>
                      </Exitus>
                    </Indentatio>
                    <Indentatio formaInd="Nummer" id="Par25_Stk2_Num2">
                      <Explicatus>2)</Explicatus>
                      <Exitus>
                        <Linea>
                          <Char>Lov om kirkers bestyrelse m.m., jf. lovbekendtgørelse nr. 318 af 26. juni 1970.</Char>
                        </Linea>
                      </Exitus>
                    </Indentatio>
                    <Indentatio formaInd="Nummer" id="Par25_Stk2_Num3">
                      <Explicatus>3)</Explicatus>
                      <Exitus>
                        <Linea>
                          <Char>Lov nr. 100 af 15. maj 1903 om afløsning af tienden.</Char>
                        </Linea>
                      </Exitus>
                    </Indentatio>
                    <Indentatio formaInd="Nummer" id="Par25_Stk2_Num4">
