    <IkraftCentreretParagraf>
      <Explicatus>§ 4</Explicatus>
      <Stk>
        <Exitus>
          <Linea>
            <Char>Loven træder i kraft den 1. juli 2010.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
    <IkraftCentreretParagraf>
      <Explicatus>§ 5</Explicatus>
      <Stk>
        <Explicatus>Stk. 1.</Explicatus>
        <Exitus>
          <Linea>
            <Char>Loven gælder ikke for Færøerne og Grønland, jf. dog stk. 2.</Char>
          </Linea>
        </Exitus>
      </Stk>
      <Stk>
        <Explicatus>Stk. 2.</Explicatus>
        <Exitus>
          <Linea>
            <Char>§ 3 kan ved kongelig anordning sættes i kraft for Grønland med de afvigelser, som de grønlandske forhold tilsiger.</Char>
          </Linea>
        </Exitus>
      </Stk>
