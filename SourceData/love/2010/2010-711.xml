    <AendringCentreretParagraf>
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I straffeloven, jf. lovbekendtgørelse nr. 1034 af 29. oktober 2009, som ændret ved § 1 i lov nr. 1107 af 1. december 2009, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 15</Char>
                <Char> ændres »under 15 år« til:</Char>
              </Linea>
              <Linea>
                <Char>»under 14 år«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char formaChar="Italic" signiChar="AendringURN">§ 33, stk. 3,</Char>
                <Char> affattes således:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst>
              <Stk>
                <Explicatus>Stk. 3.</Explicatus>
                <Exitus>
                  <Linea>
                    <Char>En gerningsmand, der ikke var fyldt 18 år, da gerningen blev udført, kan ikke idømmes fængsel på livstid.</Char>
                  </Linea>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>3.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 81</Char>
                <Char> indsættes efter nr. 9 som nyt nummer:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst>
              <Exitus>
                <Index>
                  <Indentatio formaInd="Nummer">
                    <Explicatus>10)</Explicatus>
                    <Exitus>
                      <Linea>
                        <Char>at gerningsmanden har medvirket til kriminalitet udført af et barn under 14 år,</Char>
                      </Linea>
                    </Exitus>
                  </Indentatio>
                </Index>
              </Exitus>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
        <Aendring>
          <AendringDefinition>
            <Exitus>
