    <AendringCentreretParagraf>
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om vederlag og pension m.v. for ministre, jf. lovbekendtgørelse nr. 273 af 20. april 2004, som ændret ved § 16 i lov nr. 1587 af 20. december 2006, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 1, stk. 1, 1. pkt.,</Char>
                <Char> indsættes efter »grundbeløb«: », jf. dog stk. 2«. </Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion />
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 1, stk. 1, 2. pkt.,</Char>
                <Char> ændres »Dog udgør vederlaget til statsministeren« til: </Char>
                <Char>»Vederlaget til statsministeren udgør«. </Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion />
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>3.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 1</Char>
                <Char> indsættes efter stk. 1 som nyt stykke: </Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst>
              <Stk>
                <Explicatus>Stk. 2.</Explicatus>
                <Exitus>
                  <Linea>
                    <Char>I årene 2011 og 2012 udgør grundvederlaget 878.607 kr. i årligt grundbeløb.</Char>
                  </Linea>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
        <Aendring>
