      <AendringsNummer>
        <Explicatus>11.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 6</Char>
                <Char> indsættes som </Char>
                <Char formaChar="Italic" signiChar="AendringURN">stk. 4:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst>
              <Stk>
                <Explicatus>Stk. 4.</Explicatus>
                <Exitus>
                  <Linea>
                    <Char>Omkostningerne til akkrediteret certificering, verificering eller inspektion efter regler fastsat i medfør af stk. 3 påhviler virksomheden eller elleverandøren.</Char>
                  </Linea>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
