    <AendringCentreretParagraf>
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om valg til Folketinget, jf. lovbekendtgørelse nr. 107 af 8. februar 2011, som ændret ved lov nr. 251 af 21. marts 2012, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 108, stk. 2, </Char>
                <Char>indsættes som </Char>
                <Char formaChar="Italic" signiChar="AendringURN">2. pkt.:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst>
              <Exitus>
                <Linea>
                  <Char>Grundvederlaget reguleres én gang årligt pr. 1. april med en reguleringsprocent, der beregnes på baggrund af lønudviklingen i lønramme 37-39 og løngrupperne 1-3.</Char>
                </Linea>
              </Exitus>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I</Char>
                <Char formaChar="Italic" signiChar="AendringURN"> § 108, stk. 5,</Char>
                <Char> ændres »§ 109 a, stk. 12« til: »§ 109 a, stk. 13«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>3.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I</Char>
                <Char formaChar="Italic" signiChar="AendringURN"> § 109, stk. 3, </Char>
                <Char>udgår »fra og med den 13. måned«, og efter »indtægter« indsættes: », jf. dog stk. 4-6«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
