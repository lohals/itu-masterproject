                <Index>
                  <Indentatio formaInd="Nummer">
                    <Explicatus>5)</Explicatus>
                    <Exitus>
                      <Linea>
                        <Char>Fjernelse af skrot og affald på ejendomme beliggende i byer med færre end 3.000 indbyggere eller i det åbne land.</Char>
                      </Linea>
                    </Exitus>
                  </Indentatio>
                </Index>
              </Exitus>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>6.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 12, stk. 1,</Char>
                <Char> indsættes efter »støtteberettigede udgifter,«: »jf. § 8, stk. 2, nr. 1-4, og stk. 3,«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>7.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 12</Char>
                <Char> indsættes efter stk. 1 som nyt stykke:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Exitus>
                <Linea>
                  <Char formaChar="Italic">Stk. 2.</Char>
                </Linea>
                <Linea>
                  <Char>De støtteberettigede udgifter, der udgør det maksimale grundlag for støtteberegningen, jf. § 8, stk. 2, nr. 5, består af udgifter til fjernelse af skrot og affald.</Char>
                </Linea>
              </Exitus>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
        <Rykningsklausul>
          <Exitus>
            <Linea>
              <Char>Stk. 2 bliver herefter stk. 3.</Char>
            </Linea>
          </Exitus>
        </Rykningsklausul>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>8.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 14</Char>
                <Char> ændres »samt til nedrivningsudgifter« til: »og til udgifter vedrørende nedrivning samt fjernelse af skrot og affald«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>9.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 19, stk. 2,</Char>
                <Char> indsættes efter 1. pkt.:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Exitus>
                <Linea>
                  <Char>Dog refunderes 60 pct. af kommunalbestyrelsens udgifter efter stk. 1, såfremt tilskud vedrører arbejder omfattet af § 8, stk. 2, nr. 1-3 og 5, og arbejderne udføres på bygninger eller ejendomme, der er beliggende i byer med færre end 3.000 indbyggere eller i det åbne land.</Char>
                </Linea>
              </Exitus>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>10.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 21, nr. 1</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">2,</Char>
                <Char> ændres »eller wc« til: », wc eller bad«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
