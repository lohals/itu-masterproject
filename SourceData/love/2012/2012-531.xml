  <DokumentIndhold>
    <Hymne>
      <Exitus>
        <Linea>
          <Char>VI MARGRETHE DEN ANDEN, af Guds Nåde Danmarks Dronning, gør vitterligt:</Char>
        </Linea>
      </Exitus>
      <Exitus>
        <Linea>
          <Char>Folketinget har vedtaget og Vi ved Vort samtykke stadfæstet følgende lov:</Char>
        </Linea>
      </Exitus>
    </Hymne>
    <AendringCentreretParagraf>
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om medlemskab af folkekirken, kirkelig betjening og sognebåndsløsning, jf. lovbekendtgørelse nr. 572 af 17. juni 2009, foretages følgende ændring:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>Efter § 7 indsættes:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Paragraf>
                <Explicatus>§ 7 a.</Explicatus>
                <Stk>
                  <Exitus>
                    <Linea>
                      <Char>En præst kan undlade at vie to personer af samme køn.</Char>
                    </Linea>
                  </Exitus>
                </Stk>
                <Stk>
                  <Explicatus>Stk. 2.</Explicatus>
                  <Exitus>
                    <Linea>
                      <Char>En præst kan undlade at meddele kirkelig velsignelse af et ægteskab mellem to personer af samme køn.</Char>
                    </Linea>
                  </Exitus>
                </Stk>
              </Paragraf>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
    </AendringCentreretParagraf>
    <IkraftCentreretParagraf>
      <Explicatus>§ 2</Explicatus>
      <Stk>
        <Exitus>
          <Linea>
            <Char>Loven træder i kraft den 15. juni 2012.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
    <IkraftCentreretParagraf>
      <Explicatus>§ 3</Explicatus>
      <Stk>
        <Exitus>
          <Linea>
            <Char>Loven gælder ikke for Færøerne og Grønland.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
