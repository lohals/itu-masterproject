            <Paragraf id="Par25">
              <Explicatus>§ 25.</Explicatus>
              <Stk id="Par25_Stk1">
                <Exitus>
                  <Linea>
                    <Char>Loven træder i kraft den 1. marts 2012.</Char>
                  </Linea>
                </Exitus>
              </Stk>
              <Stk id="Par25_Stk2">
                <Explicatus>Stk. 2.</Explicatus>
                <Exitus>
                  <Linea>
                    <Char>Lov nr. 449 af 9. juni 2004 om bortvisning og beføjelse til at meddele tilhold m.v. ophæves.</Char>
                  </Linea>
                </Exitus>
              </Stk>
            </Paragraf>
            <Paragraf id="Par26">
              <Explicatus>§ 26.</Explicatus>
              <Stk id="Par26_Stk1">
                <Exitus>
                  <Linea>
                    <Char>Loven gælder ikke for Færøerne.</Char>
                  </Linea>
                </Exitus>
