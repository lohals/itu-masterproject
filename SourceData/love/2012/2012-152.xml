        <Explicatus>5.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char formaChar="Italic" signiChar="AendringURN">§ 49, stk. 5, 1. pkt.,</Char>
                <Char> affattes således:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Stk>
                <Exitus>
                  <Linea>
                    <Char>Til et medlem, som har opnået ret til dagpenge efter § 54, udbetales dagpenge med et beløb, der udgør 82 pct. af højeste dagpenge efter §§ 47 og 70.</Char>
                  </Linea>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>6.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 52 a, stk. 2, 1. pkt.,</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">stk. 3</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">4,</Char>
                <Char> ændres », der berettiger til optagelse i en arbejdsløshedskasse, jf. § 41, stk. 1, nr. 3, litra b« til: »af den i § 54 nævnte art«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
