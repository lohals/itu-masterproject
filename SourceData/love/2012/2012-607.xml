        <Explicatus>8.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 14, stk. 2,</Char>
                <Char> indsættes som </Char>
                <Char formaChar="Italic" signiChar="AendringURN">2. pkt.:</Char>
