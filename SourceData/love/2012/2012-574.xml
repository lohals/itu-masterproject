    <AendringCentreretParagraf>
      <Explicatus>§ 2</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om afgift af elektricitet, jf. lovbekendtgørelse nr. 310 af 1. april 2011, som ændret senest ved § 3 i lov nr. 481 af 30. maj 2012, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 6, stk. 1, nr. 2,</Char>
                <Char> ændres »energisparebidrag« til: »energieffektiviseringsbidrag«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion />
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
