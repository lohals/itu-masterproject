    <Hymne>
      <Exitus>
        <Linea>
          <Char>VI MARGRETHE DEN ANDEN, af Guds Nåde Danmarks Dronning, gør vitterligt:</Char>
        </Linea>
      </Exitus>
      <Exitus>
        <Linea>
          <Char>Folketinget har vedtaget og Vi ved Vort samtykke stadfæstet følgende lov:</Char>
        </Linea>
      </Exitus>
    </Hymne>
    <AendringCentreretParagraf>
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om produktionsskoler, jf. lovbekendtgørelse nr. 688 af 22. juni 2011, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 2</Char>
                <Char> indsættes efter stk. 7 som nyt stykke:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst>
              <Stk>
                <Explicatus>Stk. 8.</Explicatus>
                <Exitus>
                  <Linea>
                    <Char>Ved afslutningen af et forløb på en produktionsskole udsteder skolen efter drøftelse med deltageren et kompetencebevis.</Char>
                  </Linea>
                  <Linea>
                    <Char>En deltager kan afstå fra at modtage et kompetencebevis, hvis produktionsskoleforløbet har været kortere end 3 måneder.</Char>
                  </Linea>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
        <Rykningsklausul>
          <Exitus>
            <Linea>
              <Char>Stk. 8 og 9 bliver herefter stk. 9 og 10.</Char>
            </Linea>
          </Exitus>
        </Rykningsklausul>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 2, stk. 9,</Char>
                <Char> der bliver stk. 10, indsættes efter »stk. 1-6,«: »om skolernes udstedelse af kompetencebevis til deltagerne efter stk. 8 og fastsættelse af kompetencemål til brug herfor«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion />
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>3.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 2, stk. 9,</Char>
                <Char> der bliver stk. 10, ændres »udstyr efter stk. 8« til: »udstyr efter stk. 9«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion />
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>4.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 4, stk. 4,</Char>
                <Char> ændres »jf. § 2, stk. 8,« til: »jf. § 2, stk. 9,«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion />
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>5.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 11, stk. 3,</Char>
                <Char> ændres »§ 9, stk. 5« til: »§ 9, stk. 4«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion />
        </Aendring>
      </AendringsNummer>
    </AendringCentreretParagraf>
    <IkraftCentreretParagraf>
      <Explicatus>§ 2</Explicatus>
      <Stk>
        <Exitus>
          <Linea>
            <Char>Loven træder i kraft den 1. august 2012.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
    <IkraftCentreretParagraf>
      <Explicatus>§ 3</Explicatus>
      <Stk>
        <Exitus>
          <Linea>
            <Char>Børne- og undervisningsministeren fremsætter forslag om revision af § 2, stk. 8, i lov om produktionsskoler som affattes ved denne lovs § 1, nr. 1, i folketingsåret 2014-15.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
