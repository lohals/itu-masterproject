        <Explicatus>3.</Explicatus>
        <Aendring id="ide2e0f4fd-5fdd-4c9e-8d11-bbbecb8b2220">
          <AendringDefinition id="id7f8ddb07-a45d-4938-b0bb-a6f5ae547a58">
            <Exitus>
              <Linea>
                <Char>I </Char>
