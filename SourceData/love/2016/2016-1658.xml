                    <AendringNyTekst />
                  </AendringAktion>
                </Aendring>
              </AendringsNummer>
              <AendringsNummer id="idd147be44-311a-4a58-a78d-be98fb8ad379">
                <Explicatus>2.</Explicatus>
                <Aendring id="id6bb2b57d-ef5a-4083-9a7f-9117703a92e8">
                  <AendringDefinition id="id89309b09-7854-43f4-be7a-bdfeede3b990">
                    <Exitus>
                      <Linea>
                        <Char formaChar="Italic">§ 58</Char>
                        <Char> affattes således:</Char>
                      </Linea>
                    </Exitus>
                  </AendringDefinition>
