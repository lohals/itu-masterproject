                                <Exitus>
                                  <Linea>
                                    <Char>adressaten for afgørelsen,</Char>
                                  </Linea>
                                </Exitus>
                              </Indentatio>
                              <Indentatio id="id066f16c5-0139-4d54-aa00-2d6725cfea43" formaInd="Nummer">
                                <Explicatus>2)</Explicatus>
                                <Exitus>
                                  <Linea>
                                    <Char>offentlige myndigheder og</Char>
