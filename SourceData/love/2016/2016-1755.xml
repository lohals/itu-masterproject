      <AendringsNummer id="id134fa359-4b43-4892-a34e-fecf56f8d79f">
        <Explicatus>5.</Explicatus>
        <Aendring id="idc309f20e-2b86-44d8-9a89-e5d1983b4f15">
          <AendringDefinition id="id86de6402-e9ad-47e6-ac8e-cabcc812a480">
            <Exitus>
              <Linea>
                <Char signiChar="AendringURN" formaChar="Italic">§ 85 b, stk. 4, 2. pkt., </Char>
