        <Aendring id="id015ac212-93e2-4959-95df-6dfd589b0911">
          <AendringDefinition id="id671fbc3b-bb99-4757-b4df-a41864ea02b9">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 51 a, nr. 2, </Char>
                <Char>indsættes efter »§ 37 a, stk. 1,«: »og § 4 a, stk. 1, i lov om Energinet.dk,«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="idae1e2b5c-9cab-4869-86cc-5fced3c0c80d">
