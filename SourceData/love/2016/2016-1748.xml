        <Aendring id="id87454470-33af-45d7-b162-879877ab5195">
          <AendringDefinition id="id374fdd84-2b7b-419a-9d8f-e73d6669f951">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 4, stk. 5, nr. 3, </Char>
                <Char>indsættes før »skriftlige«: »mundtlige og«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
