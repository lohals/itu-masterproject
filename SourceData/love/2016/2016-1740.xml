  <DokumentIndhold id="id66343424-3289-4a63-80c8-ae8e5924d877">
    <Hymne id="idb41a5535-f8be-4c23-86ea-6000cb75edaa">
      <Exitus>
        <Linea>
          <Char>VI MARGRETHE DEN ANDEN, af Guds Nåde Danmarks Dronning, gør vitterligt:</Char>
        </Linea>
      </Exitus>
      <Exitus>
        <Linea>
          <Char>Folketinget har vedtaget og Vi ved Vort samtykke stadfæstet følgende lov:</Char>
        </Linea>
      </Exitus>
    </Hymne>
    <AendringCentreretParagraf id="id4e45a419-a5fa-4506-875a-354af38dc238">
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I færdselsloven, jf. lovbekendtgørelse nr. 1386 af 11. december 2013, som ændret senest ved lov nr. 660 af 8. juni 2016, foretages følgende ændring:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer id="id80852815-2db6-45e1-b753-3ea461e6c141">
        <Explicatus>1.</Explicatus>
        <Aendring id="id358b9d30-7b22-4222-8795-39d5bf4eb183">
          <AendringDefinition id="idca2b360c-8cb8-4eab-bceb-2d5839380438">
            <Exitus>
              <Linea>
                <Char>I</Char>
                <Char formaChar="Italic"> § 56, stk. 2, nr. 2, </Char>
                <Char>ændres »syns- og høreevne« til: »synsevne«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id8bf03b4e-cb58-4871-8bef-c236b2e8838e">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
    </AendringCentreretParagraf>
    <IkraftCentreretParagraf id="idc3eae19c-c921-4292-ae7b-3452c1f2ced0">
      <Explicatus>§ 2</Explicatus>
      <Stk id="idf8cc6a72-a4ba-40e6-9512-1b9913cd7e3f">
        <Exitus>
          <Linea>
            <Char>Loven træder i kraft dagen efter bekendtgørelsen i Lovtidende.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
    <IkraftCentreretParagraf id="id7b936af7-04bd-4f49-9963-78ec6565bfe2">
      <Explicatus>§ 3</Explicatus>
      <Stk id="idc1236df6-5ed7-41ad-bfe5-5fc8e79edbfb">
        <Exitus>
          <Linea>
            <Char>Loven gælder ikke for Færøerne og Grønland.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
