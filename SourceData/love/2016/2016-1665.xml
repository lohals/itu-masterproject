        <Aendring id="ida5de1537-ab2f-4f4a-873f-1e32e95d5b9c">
          <AendringDefinition id="idaa168978-4b5f-4744-9168-08f2c3a6b9c8">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 48, stk. 3, 1. pkt.,</Char>
                <Char> indsættes efter »truffet«: », jf. dog stk. 4«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id2449b354-16b4-4b3e-b1fb-9ec13078e6cb">
