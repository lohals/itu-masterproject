          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer id="idd49c8b2d-228d-4f0b-aee8-408cf67417a4">
        <Explicatus>2.</Explicatus>
        <Aendring id="id93eb3399-b359-4b73-a64e-a227d473937f">
          <AendringDefinition id="id24f43050-0a4e-499d-9710-c450702e72a6">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic">§ 3, stk. 1,</Char>
                <Char> indsættes efter »digitale«: »radio- og«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id06cb50f6-78e6-41fc-93c5-34adbb83cd07">
            <AendringNyTekst />
          </AendringAktion>
