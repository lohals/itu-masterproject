      <AendringsNummer id="id93f4162f-06eb-4b2f-9a86-3b49ed638af1">
        <Explicatus>10.</Explicatus>
        <Aendring id="id180234f2-425f-469c-b295-0d3fc29ad488">
          <AendringDefinition id="id55de1164-79e2-4101-9375-fdae53405e1d">
            <Exitus>
              <Linea>
                <Char signiChar="AendringURN" formaChar="Italic">§ 36, stk. 4, 1. pkt.,</Char>
                <Char> affattes således:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="idecbd7e74-6266-4757-bd0a-d1b188724eca">
            <AendringNyTekst>
              <Stk id="idacb73d9e-6fa6-425c-8d04-43b61470755e">
                <Exitus>
                  <Linea>
                    <Char>I regler, der udstedes efter § 2, stk. 5, § 7, stk. 3 og 4, § 8, stk. 2, § 10, stk. 2, § 13, stk. 2 og 3, § 14, stk. 2, og § 17 a, kan der fastsættes straf i form af bøde.</Char>
                  </Linea>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
