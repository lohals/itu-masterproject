              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 29, stk. 1,</Char>
                <Char> indsættes som </Char>
                <Char signiChar="AendringURN" formaChar="Italic">nr. 5</Char>
                <Char> og </Char>
                <Char signiChar="AendringURN" formaChar="Italic">6:</Char>
              </Linea>
