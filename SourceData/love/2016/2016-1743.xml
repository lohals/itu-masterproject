                <Char signiChar="AendringURN" formaChar="Italic">nr. 13:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id7a115819-da0c-49ba-b83c-3f5d85e4df2e">
