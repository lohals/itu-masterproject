        <Explicatus>8.</Explicatus>
        <Aendring id="idafe57cdc-9361-4ed0-8f99-f5d33e8a1865">
          <AendringDefinition id="ide03e554a-103f-4fe6-b9d3-526ee4f39488">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 52 b, stk. 1,</Char>
