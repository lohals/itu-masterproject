    <IkraftCentreretParagraf id="id2dce1dc1-c6c5-4840-be6f-066eddc6c2dd">
      <Explicatus>§ 3</Explicatus>
      <Stk id="id849e617d-a465-4c61-95af-7dc4449621db">
        <Exitus>
          <Linea>
            <Char>Loven træder i kraft den 1. januar 2017.</Char>
          </Linea>
