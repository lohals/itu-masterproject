                <Char> indsættes som </Char>
                <Char formaChar="Italic" signiChar="AendringURN">2. pkt.:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Exitus>
                <Linea>
                  <Char>§ 39, stk. 3, finder tilsvarende anvendelse.</Char>
                </Linea>
              </Exitus>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
