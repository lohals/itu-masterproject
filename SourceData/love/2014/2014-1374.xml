      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I ligningsloven, jf. lovbekendtgørelse nr. 1041 af 15. september 2014, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 9 C, stk. 3, 2. pkt.,</Char>
                <Char> ændres »3. pkt.« til: »3. og 4. pkt.«</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 9 C, stk. 3,</Char>
                <Char> indsættes efter 3. pkt.:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Stk>
                <Exitus>
                  <Linea>
                    <Char>For indkomstårene 2015-2018 beregnes fradraget for befordring over 120 km med den kilometertakst, Skatterådet fastsætter, jf. 1. pkt., når den skattepligtiges sædvanlige bopæl er beliggende i en af kommunerne Jammerbugt, Odsherred, Skive, Slagelse, Struer, Sønderborg, Thisted, Vordingborg og Aabenraa.</Char>
                  </Linea>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>3.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>To steder i </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 9 C, stk. 3, 4. pkt.,</Char>
                <Char> der bliver stk. 3, 5. pkt</Char>
                <Char formaChar="Italic">.</Char>
                <Char>, ændres »3. pkt.« til: »3. eller 4. pkt.«</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
    </AendringCentreretParagraf>
