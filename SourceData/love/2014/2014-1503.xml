    <AendringCentreretParagraf>
      <Explicatus>§ 3</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om vægtafgift af motorkøretøjer m.v., jf. lovbekendtgørelse nr. 185 af 18. februar 2014, som ændret ved § 2 i lov nr. 745 af 25. juni 2014, foretages følgende ændring:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 3, stk. 1, tabelafsnit D,</Char>
                <Char> ændres »D.</Char>
              </Linea>
              <Linea>
                <Char>Hyrevogne og sygetransportbiler.« til: »D.</Char>
              </Linea>
              <Linea>
                <Char>Personbiler med tilladelse til erhvervsmæssig persontransport.«</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
