                <Char formaChar="Italic" signiChar="AendringURN">4. </Char>
                <Char>og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">5. pkt.:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Exitus>
