    <AendringCentreretParagraf>
      <Explicatus>§ 2</Explicatus>
      <Exitus>
        <Linea>
          <Char>I regionsloven, jf. lovbekendtgørelse nr. 187 af 27. februar 2014, som ændret ved § 16 i lov nr. 1631 af 26. december 2013, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 12</Char>
                <Char> ændres »§§ 16 b-16 e« til: »§ 16 b, stk. 1-3, og §§ 16 c-16 e«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
