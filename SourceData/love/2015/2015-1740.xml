      <AendringsNummer id="id8a56add3-7ea0-4e42-ae7d-c20f16e84095">
        <Explicatus>12.</Explicatus>
        <Aendring id="id28b894e2-b68e-44af-a326-9cb935f21776">
          <AendringDefinition id="idac4bf680-d4e8-47ee-940f-2f427b5dafc2">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 34, stk. 3,</Char>
                <Char> ændres »§ 30, stk. 2« til: »§ 30 c«.</Char>
