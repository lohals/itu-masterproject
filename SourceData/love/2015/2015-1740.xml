        <Aendring id="id7acdd772-fb00-4025-bd04-a7e98b437896">
          <AendringDefinition id="id69272f5c-f44e-433e-9da6-88a57d246621">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 34, stk. 1, nr. 1,</Char>
                <Char> ændres »efter § 30, stk. 2,« til: »i en tilladelse efter § 30, stk. 1, eller tilsidesætter regler fastsat i medfør af § 30 c,«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
