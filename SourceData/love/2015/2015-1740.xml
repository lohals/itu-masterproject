      <AendringsNummer id="id578006a8-e1ed-442c-8bfc-72acac3d7594">
        <Explicatus>11.</Explicatus>
        <Aendring id="id3d5e315d-1990-4a11-b88b-4257e3156345">
          <AendringDefinition id="id9aa69ff3-d5cd-4769-a9d0-70598c3a7086">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 34, stk. 1, nr. 2,</Char>
                <Char> ændres »§§ 31-33« til: »§§ 31, 32 eller 33«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
