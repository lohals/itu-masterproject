    <IkraftCentreretParagraf id="id22075274-8f3b-48a4-bb46-334879e0d270">
      <Explicatus>§ 2</Explicatus>
      <Stk id="id7ace7ee5-b940-442c-80da-42d13eb97cb1">
        <Exitus>
          <Linea>
            <Char>Loven træder i kraft den 1. maj 2015.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
    <IkraftCentreretParagraf id="id212b12b0-3249-4fc9-9f7b-22449f5d6444">
      <Explicatus>§ 3</Explicatus>
      <Stk id="id58b52ea0-90c3-47cd-a407-c15bed2cce64">
        <Exitus>
          <Linea>
            <Char>Loven gælder ikke for Færøerne og Grønland, men kan ved kongelig anordning sættes i kraft for Grønland med de ændringer, som de grønlandske forhold tilsiger.</Char>
          </Linea>
        </Exitus>
      </Stk>
