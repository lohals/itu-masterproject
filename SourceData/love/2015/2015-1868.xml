              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 68 f </Char>
                <Char>indsættes som </Char>
                <Char signiChar="AendringURN" formaChar="Italic">stk. 4:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
