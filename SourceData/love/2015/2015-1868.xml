            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 68 d, stk. 5, </Char>
                <Char>indsættes som </Char>
                <Char signiChar="AendringURN" formaChar="Italic">2. pkt.:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id4b1261a1-7d0f-4e60-b025-3dcfe56c0605">
            <AendringNyTekst>
              <Exitus>
                <Linea>
                  <Char>Et jobafklaringsforløb ophører på det tidspunkt, hvor personen når folkepensionsalderen.</Char>
                </Linea>
              </Exitus>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer id="id0e82ee9b-24d1-462d-bbec-15e330f9175f">
        <Explicatus>7.</Explicatus>
        <Aendring id="id2175d2ec-35d2-4135-afb9-0d41eb2998c2">
          <AendringDefinition id="idc2e19c79-01e1-4bc5-bf5b-49a787f818aa">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 68 d </Char>
                <Char>indsættes som </Char>
                <Char signiChar="AendringURN" formaChar="Italic">stk. 6:</Char>
