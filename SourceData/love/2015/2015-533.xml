    <AendringCentreretParagraf id="iddb5fd3a1-f2d8-4c0a-a3c1-3878d2642440">
      <Explicatus>§ 2</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om dyrlæger, jf. lovbekendtgørelse nr. 464 af 15. maj 2014, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer id="idcd31aff6-deb0-455d-8d28-80a5cc000c42">
        <Explicatus>1.</Explicatus>
        <Aendring id="ide8f043bf-17e5-4640-8c52-0e584d3eae2e">
          <AendringDefinition id="id8d28f5a6-8b30-4701-b780-67ce515d4837">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 28, stk. 1,</Char>
                <Char> indsættes efter »består af«: »mindst«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id04ad83fa-bbdb-4af1-a674-e61b97794ad2" punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer id="ida30e04ae-b414-4bef-a317-c8bd367bc344">
        <Explicatus>2.</Explicatus>
        <Aendring id="idf7e770ca-69cf-443e-9d9b-e43c92bfa236">
          <AendringDefinition id="ida1f4ecf1-1f24-40cc-a7f8-9a4ff71bab68">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 29, stk. 1, 1. pkt.,</Char>
                <Char> indsættes efter »veterinærfaglige udtalelser«: »og udtalelser vedrørende hold af særlige dyr«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="idd0b4d8cb-a57e-4f03-87f2-afa67688c002" punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
