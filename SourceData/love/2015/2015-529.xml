    <AendringCentreretParagraf id="id6ed04960-24e8-44a4-808e-8dc19d41605b">
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om social service, jf. lovbekendtgørelse nr. 150 af 16. februar 2015, som ændret ved § 1 i lov nr. 495 af 21. maj 2013 og § 1 i lov nr. 722 af 25. juni 2014, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer id="id8b65c689-2bb2-4b45-bf13-3e420e6fef91">
        <Explicatus>1.</Explicatus>
        <Aendring id="id23fa56a3-23d1-4337-9c3a-cdce90a4d5a2">
          <AendringDefinition id="id151c1360-9318-415c-bcf8-34018f10ca9d">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 52, stk. 3, nr. 4,</Char>
                <Char> indsættes efter »plejefamilie,«: »i en kommunal plejefamilie,«, og efter »§ 66, stk. 1, nr. 1,« indsættes: »2,«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id7088b030-e410-40bb-a1e1-8dfa3cc02105" punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer id="id0b3696d0-ab40-4b08-a6aa-d4564e7de60b">
        <Explicatus>2.</Explicatus>
        <Aendring id="id20b0b5ab-e185-4da4-b305-2595a77162a5">
          <AendringDefinition id="id8b8fd629-38c2-4a4f-bcd6-732276507784">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 66, stk. 2,</Char>
                <Char> ændres »eller 5« til: »eller 6«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id6bab9ccf-97c9-4888-9dfe-61b37a8f6493" punktumEfterSlutcitationstegn="False">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer id="id141745dc-9948-49ff-ac91-c9117fe55428">
        <Explicatus>3.</Explicatus>
        <Aendring id="idd8f7a554-74a7-4cf5-9fcf-f14e64a38d0d">
          <AendringDefinition id="ideb19cd5e-3615-4fc1-9ccb-6889d88533f3">
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char signiChar="AendringURN" formaChar="Italic">§ 66 a</Char>
                <Char> indsættes efter stk. 4 som nyt stykke:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id0c85dfc0-9f37-468e-85e0-ee4f698d06ae" punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Stk id="id5a9fa317-277f-4179-a43e-a56acc3f9e0e">
                <Explicatus>Stk. 5.</Explicatus>
                <Exitus>
                  <Linea>
                    <Char>Kommunalbestyrelsen skal tilbyde den fornødne faglige støtte til</Char>
                  </Linea>
                </Exitus>
                <Exitus id="id652bd01f-16d9-44ef-a618-e9d96fc2bf26">
                  <Index>
                    <Indentatio id="id2b22c4a7-ecd3-4dfd-b754-4e3aeddc7366" formaInd="Nummer">
                      <Explicatus>1)</Explicatus>
                      <Exitus>
                        <Linea>
                          <Char>netværksplejefamilier i overensstemmelse med plejeopgavens omfang og</Char>
                        </Linea>
                      </Exitus>
                    </Indentatio>
                    <Indentatio id="id6169831b-88cd-4ea3-b3fe-a6fa4e4b7ee4" formaInd="Nummer">
                      <Explicatus>2)</Explicatus>
                      <Exitus>
                        <Linea>
                          <Char>familier, der har adopteret et barn eller en ung, der tidligere har været anbragt i pleje i familien.</Char>
                        </Linea>
                      </Exitus>
                    </Indentatio>
                  </Index>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
        <Rykningsklausul id="id6727344a-ae65-40c3-bb60-8cd6225a9e81">
