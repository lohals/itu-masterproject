        <Aendring id="idcbb902ba-ae72-4610-8c7b-1fbd315873f2">
          <AendringDefinition id="id62d7825b-12f8-40a1-889e-2f2ef3488288">
            <Exitus>
              <Linea>
                <Char signiChar="AendringURN" formaChar="Italic">§ 16 c, stk. 2,</Char>
                <Char> affattes således:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="ide3bb6abe-48a9-4e40-8145-de31a436405d">
            <AendringNyTekst>
              <Stk id="id90b5d34f-1179-49d1-b642-2d3a932b0b92">
                <Explicatus>Stk. 2.</Explicatus>
                <Exitus>
                  <Linea>
                    <Char>En kreditsaldo forrentes ikke.</Char>
