                <Char signiChar="AendringURN" formaChar="Italic">stk. 4:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id0209072a-6635-41d9-8c26-78d86aac910a" punktumEfterSlutcitationstegn="False">
