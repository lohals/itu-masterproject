        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 5, stk. 4,</Char>
                <Char> ændres »eller godkendelsen« til:</Char>
              </Linea>
              <Linea>
                <Char>»til taxikørsel (taxibevillingen)«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>10.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 6, stk. 5,</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 8, stk. 1,</Char>
                <Char> ændres »§ 4 a, stk. 2,« til:</Char>
              </Linea>
