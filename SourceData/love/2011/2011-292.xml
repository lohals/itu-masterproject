    <AendringCentreretParagraf>
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om rettens pleje, jf. lovbekendtgørelse nr. 1237 af 26. oktober 2010, som ændret senest ved § 2 i lov nr. 1552 af 21. december 2010, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 181</Char>
                <Char> ændres »§ 856, stk. 4 og 5« til:</Char>
              </Linea>
              <Linea>
                <Char>»§ 856, stk. 5 og 6«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
