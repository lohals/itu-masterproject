    <AendringCentreretParagraf>
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om fuldbyrdelse af straf m.v., jf. lovbekendtgørelse nr. 1162 af 5. oktober 2010, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 45 a, stk. 1,</Char>
                <Char> udgår »forventes løsladt inden for 3 måneder eller«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 60, stk. 1,</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 62, stk. 1,</Char>
                <Char> ændres »Institutionen« til:</Char>
              </Linea>
              <Linea>
                <Char>»Direktoratet for Kriminalforsorgen og institutionen«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
