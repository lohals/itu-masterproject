    <AendringCentreretParagraf>
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om autorisation af sundhedspersoner og om sundhedsfaglig virksomhed, jf. lovbekendtgørelse nr. 1350 af 17. december 2008, som ændret ved § 15 i lov nr. 140 af 9. februar 2010 og § 2 i lov nr. 706 af 25. juni 2010, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 1, stk. 3,</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 21, stk. 1,</Char>
                <Char> ændres »og kontaktlinseoptikere« til:</Char>
              </Linea>
              <Linea>
                <Char>», kontaktlinseoptikere og optometrister«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 13, stk. 1,</Char>
                <Char> indsættes som </Char>
                <Char formaChar="Italic" signiChar="AendringURN">2. pkt.:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst>
              <Stk>
                <Exitus>
                  <Linea>
                    <Char>Sundhedsstyrelsen offentliggør endvidere beslutning om fraskrivelse af autorisation og frivillig virksomhedsindskrænkning i medfør af § 5.</Char>
                  </Linea>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer>
