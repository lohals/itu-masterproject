        <Explicatus>25.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char>I </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 38, stk. 2,</Char>
                <Char> indsættes som </Char>
                <Char formaChar="Italic" signiChar="AendringURN">2. pkt.:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Stk>
                <Exitus>
                  <Linea>
                    <Char>Biskoppens afgørelse kan ikke indbringes for anden administrativ myndighed.</Char>
                  </Linea>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
