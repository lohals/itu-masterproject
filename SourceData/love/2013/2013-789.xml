        <Explicatus>2.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char formaChar="Italic" signiChar="AendringURN">§ 2, stk. 7</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">8,</Char>
