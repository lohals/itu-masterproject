        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char formaChar="Italic" signiChar="AendringURN">§ 80, stk. 1,</Char>
                <Char> affattes således:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Stk>
                <Exitus>
                  <Linea>
                    <Char>Kommunalbestyrelsens og miljøministerens afgørelser kan påklages af</Char>
                  </Linea>
                </Exitus>
                <Exitus>
                  <Index>
                    <Indentatio formaInd="Nummer">
                      <Explicatus>1)</Explicatus>
                      <Exitus>
                        <Linea>
                          <Char>afgørelsens adressat og</Char>
                        </Linea>
                      </Exitus>
                    </Indentatio>
                    <Indentatio formaInd="Nummer">
                      <Explicatus>2)</Explicatus>
                      <Exitus>
                        <Linea>
                          <Char>enhver, der må antages at have individuel, væsentlig interesse i sagens udfald.</Char>
                        </Linea>
                      </Exitus>
                    </Indentatio>
                  </Index>
                </Exitus>
              </Stk>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
