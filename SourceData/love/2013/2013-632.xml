                <Char formaChar="Italic" signiChar="AendringURN">§ 4</Char>
                <Char> indsættes som </Char>
                <Char formaChar="Italic" signiChar="AendringURN">3. pkt.:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion punktumEfterSlutcitationstegn="False">
            <AendringNyTekst>
              <Exitus>
                <Linea>
                  <Char>Regeringen underretter desuden udvalget om efterretningstjenesternes årlige budget.</Char>
                </Linea>
              </Exitus>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
