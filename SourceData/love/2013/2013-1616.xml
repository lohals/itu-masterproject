                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">4. pkt., stk. 3, 1.</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">2. pkt.,</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">stk. 4,</Char>
                <Char> og </Char>
                <Char formaChar="Italic" signiChar="AendringURN">§ 3, stk. 1, 2.</Char>
