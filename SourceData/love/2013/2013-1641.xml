    <AendringCentreretParagraf>
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om folkeskolen, jf. lovbekendtgørelse nr. 521 af 27. maj 2013, som ændret ved § 4 i lov nr. 622 af 12. juni 2013, foretages følgende ændring:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer>
        <Explicatus>1.</Explicatus>
        <Aendring>
          <AendringDefinition>
            <Exitus>
              <Linea>
                <Char formaChar="Italic">§ 15</Char>
                <Char> affattes således:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion>
            <AendringNyTekst>
              <Paragraf>
                <Explicatus>§ 15.</Explicatus>
                <Stk>
                  <Exitus>
                    <Linea>
                      <Char>Undervisningstiden skal tilrettelægges, så eleverne får motion og bevægelse i gennemsnitligt 45 minutter om dagen.</Char>
                    </Linea>
                  </Exitus>
                </Stk>
                <Stk>
                  <Explicatus>Stk. 2.</Explicatus>
                  <Exitus>
                    <Linea>
                      <Char>Der skal etableres lektiehjælp og faglig fordybelse inden for undervisningstiden.</Char>
                    </Linea>
                  </Exitus>
                </Stk>
              </Paragraf>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
    </AendringCentreretParagraf>
    <IkraftCentreretParagraf>
      <Explicatus>§ 2</Explicatus>
      <Stk>
        <Exitus>
          <Linea>
            <Char>Undervisningsministeren fastsætter tidspunktet for lovens ikrafttræden.</Char>
          </Linea>
        </Exitus>
