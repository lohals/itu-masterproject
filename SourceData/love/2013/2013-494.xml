      <Explicatus>§ 11</Explicatus>
      <Rubrica>
        <Linea>
          <Char>Ikrafttrædelses- og overgangsbestemmelser</Char>
        </Linea>
      </Rubrica>
      <Stk>
        <Explicatus>Stk. 1.</Explicatus>
        <Exitus>
          <Linea>
            <Char>Loven træder i kraft den 1. juni 2013.</Char>
          </Linea>
        </Exitus>
