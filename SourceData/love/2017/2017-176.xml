        <Aendring id="id76a43078-d347-44b7-b69b-bb621cbabaee">
          <AendringDefinition id="ide051765c-9df7-4367-ab0d-2a8dba2d4268">
            <Exitus>
              <Linea>
                <Char>I </Char>
