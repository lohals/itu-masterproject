    <AendringCentreretParagraf id="id8e9a8292-d8ce-4b70-819b-eb5669639a62">
      <Explicatus>§ 1</Explicatus>
      <Exitus>
        <Linea>
          <Char>I lov om kommunernes styrelse, jf. lovbekendtgørelse nr. 769 af 9. juni 2015, foretages følgende ændringer:</Char>
        </Linea>
      </Exitus>
      <AendringsNummer id="id8ec9fa34-f843-4203-b0ea-3bc07f23047d">
        <Explicatus>1.</Explicatus>
        <Aendring id="idc5fa6005-2f4e-4719-bfaa-9b5f18318a1d">
          <AendringDefinition id="ide6491a0c-22a1-4148-a360-afd35ea69c4c">
            <Exitus>
              <Linea>
                <Char>Overalt i loven ændres »statsforvaltningen« til: »Ankestyrelsen«, »statsforvaltningens« til: »Ankestyrelsens«, »Statsforvaltningen« til: »Ankestyrelsen«, og »Statsforvaltningens« til: »Ankestyrelsens«.</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="idf7ad25ea-e5ec-487d-8fcc-325828502556">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer id="id84065f6b-1490-4fba-960f-8a19df614221">
        <Explicatus>2.</Explicatus>
        <Aendring id="id8dbce8a9-41cc-49f5-9948-3ec2c1072bdc">
          <AendringDefinition id="id88a2b9dd-8159-432f-b49e-310cdefe2f43">
            <Exitus>
              <Linea>
                <Char>Efter</Char>
                <Char formaChar="Italic">
                </Char>
                <Char>§ 16 e indsættes i </Char>
                <Char signiChar="AendringURN" formaChar="Italic">kapitel II:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id020c2383-88ec-4828-b1dd-bc1e24a95306">
            <AendringNyTekst>
              <Paragraf id="id4c70c77e-4746-4e27-ab1c-b89113a4b7e5" localId="16f">
                <Explicatus>§ 16 f.</Explicatus>
                <Stk id="id25dba7d9-e611-4024-8f62-e5530ae73d23">
                  <Exitus>
                    <Linea>
                      <Char>Kommunalbestyrelsen kan beslutte at yde befordringsgodtgørelse til medlemmer af kommunalbestyrelsen, der foretager borgerlige vielser, jf. § 18, stk. 1 og 2, i lov om ægteskabs indgåelse og opløsning.</Char>
                    </Linea>
                  </Exitus>
                </Stk>
              </Paragraf>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer id="idd2dfa495-3669-4078-833f-070a77783c13">
        <Explicatus>3.</Explicatus>
        <Aendring id="idcb3c6a6c-f42d-436e-af05-cf6dba2cb361">
          <AendringDefinition id="idcca593ef-a78f-4ff3-a311-4baa05bd3dbe">
            <Exitus>
              <Linea>
                <Char signiChar="AendringURN" formaChar="Italic">§ 48 a </Char>
                <Char>affattes således:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id271e748e-d7c5-4ef1-a2bc-68c36598234f">
            <AendringNyTekst>
              <Paragraf id="id78656338-3a87-48fa-9f76-d76669e9e3ca" localId="48a">
                <Explicatus>§ 48 a.</Explicatus>
                <Stk id="id3be169d2-37ee-45d5-9ca5-403c8e4b93ac">
                  <Exitus>
                    <Linea>
                      <Char>Ankestyrelsen beslutter, om der er tilstrækkelig anledning til at rejse en tilsynssag.</Char>
                    </Linea>
                  </Exitus>
                </Stk>
              </Paragraf>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer id="idefa7c663-1e80-4aee-9e06-919b17770bfd">
