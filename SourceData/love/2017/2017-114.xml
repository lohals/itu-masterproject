          <AendringAktion id="id38978f18-62f7-4d9c-8d6e-1d39fe47ca68">
            <AendringNyTekst />
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer id="id7776e5f3-c234-45f2-8063-8c2c2720af07">
        <Explicatus>3.</Explicatus>
        <Aendring id="id0aa59934-8142-47de-900a-849ca81c583d">
          <AendringDefinition id="id693f90e4-4c69-4bc1-93c9-db4a5ab2ab1c">
