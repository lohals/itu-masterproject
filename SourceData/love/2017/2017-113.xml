      <Stk id="idb31123c5-bcd8-4ce8-ac73-f3b630fcd582">
        <Explicatus>Stk. 2.</Explicatus>
        <Exitus>
          <Linea>
            <Char>§ 1, nr. 2 og 5-7, og § 2 træder i kraft den 1. april 2017.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
    <IkraftCentreretParagraf id="id8fe2873e-db11-4d9a-9845-ce55bc7f463d">
      <Explicatus>§ 6</Explicatus>
      <Stk id="id6538331e-c4c1-4be6-9292-82f35f00f0c1">
        <Exitus>
