    <IkraftCentreretParagraf id="id7eb76581-6a2b-49ba-8e26-322578c3ee7d">
      <Explicatus>§ 4</Explicatus>
      <Stk id="id90a87d1f-c9bd-43b5-a1d0-f7b0532b8911">
        <Exitus>
          <Linea>
            <Char>Loven træder i kraft den 1. august 2016.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
    <IkraftCentreretParagraf id="ida71524ee-6866-4e7e-bf67-9bcbf9b7300e">
      <Explicatus>§ 5</Explicatus>
      <Stk id="id43d76a28-edf3-4096-9c14-bfaada2224d3">
        <Explicatus>Stk. 1.</Explicatus>
        <Exitus>
          <Linea>
            <Char>Loven gælder ikke for Færøerne og Grønland, jf. dog stk. 2.</Char>
          </Linea>
        </Exitus>
      </Stk>
      <Stk id="id09d1e7f0-b3cd-47a8-b2b9-be34e1fe4a8f">
        <Explicatus>Stk. 2.</Explicatus>
        <Exitus>
          <Linea>
            <Char>Lovens § 1 kan ved kongelig anordning helt eller delvis sættes i kraft for Færøerne med de ændringer, som de færøske forhold tilsiger.</Char>
          </Linea>
        </Exitus>
      </Stk>
    </IkraftCentreretParagraf>
