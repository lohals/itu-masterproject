                <Char signiChar="AendringURN" formaChar="Italic">4. pkt.:</Char>
              </Linea>
            </Exitus>
          </AendringDefinition>
          <AendringAktion id="id166790ec-60ce-41b2-a743-07a6840bb4bf">
            <AendringNyTekst>
              <Exitus formaEx="Left">
                <Linea>
                  <Char>Undersøgelse af den besøgende kan ligeledes finde sted efter reglerne i kapitel 10 a.</Char>
                </Linea>
              </Exitus>
            </AendringNyTekst>
          </AendringAktion>
        </Aendring>
      </AendringsNummer>
      <AendringsNummer id="id3751c603-9689-4dc7-bb54-c15b12be851e">
